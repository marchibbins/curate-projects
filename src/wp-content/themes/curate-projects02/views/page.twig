{% extends "base.twig" %}

{% block content %}
  <article class="Project Project--{{post.post_type}}">

    <header>
      <h2>{{post.title}}</h2>
      {% if post.children('page')|length %}
      <nav class="Nav Project-nav">
        <ul class="Arrange">
          {% for page in post.children('page') %}
          <li class="Arrange-sizeFit"><a href="#{{loop.index}}">{{page.sub_page_title}}</a></li>
          {% endfor %}
        </ul>
      </nav>
      {% endif %}
    </header>

    <div class="HorizontalTable">

      <div class="HorizontalTable-cell HorizontalTable-cell--article">
        <div class="HorizontalTable-cell-container">
          <div class="YScroll">
            <div class="article">
              <div>
                {{post.content}}
              </div>
              {% for page in post.children('page') %}
              <div class="u-hidden">
                {{page.content}}
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>


      {% if post.get_field('extra_image') %}
      <div class="HorizontalTable-cell HorizontalTable-cell--img">
        <div class="HorizontalTable-cell-container HorizontalTable-cell-container--img">
          <div class="Image">
            <img src="{{TimberImage(post.get_field('extra_image')).src('large')}}" alt="">
          </div>
        </div>
      </div>
      {% endif %}

    </div> <!--- /.HorizontalTable -->

  </article>
{% endblock %}
