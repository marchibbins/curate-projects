{% extends "base.twig" %}

{% block content_middle %}
  <article class="ProjectContent">

    <header>
      <h2>{{post.title}}</h2>
      {% if post.children('page')|length %}
      <nav class="Nav Project-nav">
        <ul class="Arrange">
          {% for page in post.children('page') %}
          <li class="Arrange-sizeFit"><a href="#{{loop.index}}">{{page.sub_page_title}}</a></li>
          {% endfor %}
        </ul>
      </nav>
      {% endif %}
    </header>

    <div class="YScroll">
      <div class="article">
        <div>
          {{post.content}}
        </div>
        {% for page in post.children('page') %}
        <div class="u-hidden">
          {{page.content}}
        </div>
        {% endfor %}
      </div>
    </div>
  </article>

{% endblock %}

{% block content_right %}
<article>
  <div class="HorizontalTable">

    {% if post.get_field('extra_image') %}
    <div class="HorizontalTable-cell HorizontalTable-cell--img">
      <div class="HorizontalTable-cell-container HorizontalTable-cell-container--img">
        <div class="Image">
          <img src="{{TimberImage(post.get_field('extra_image')).src('large')}}" alt="">
        </div>
      </div>
    </div>
    {% endif %}

  </div> <!--- /.HorizontalTable -->

</article>
{% endblock %}
