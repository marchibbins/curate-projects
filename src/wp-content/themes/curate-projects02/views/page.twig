{% extends "base.twig" %}

{% block content %}
  <nav>
    <ul class="Arrange">
      {% for child in post.children('page') %}
       <li class="Arrange-sizeFit"><a href="#{{child.id}}">{{child.title}}</a></li>
      {% endfor %}
    </ul>
  </nav>
	<div class="HorizontalTable">
	  <div class="HorizontalTable-cell">
      <div class="ContentYScroll">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
          <section class="article-content">
            <h1 class="article-h1">{{post.title}}</h1>
            {% for child in post.children('page') %}
            <div class="{% if loop.first != true %}u-hidden{% endif %}">
              {{child.content}}
            </div>
            {% endfor %}
          </section>
        </article>
      </div>
    </div>
  </div>
{% endblock %}
