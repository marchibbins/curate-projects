{% extends "base.twig" %}

{% block content %}
{% embed "layout.twig" %}

  {% block main %}
  <div class="Content-fullScroll Content-fullScroll--constrain">
  	<div class="Content-fullScroll-inner">

      <article class="ProjectContent Autoheight">
        <header><h2>{{post.title}}</h2></header>


        <div class="YScroll">
          <div class="Article">
            <div>
              {{post.content}}
            </div>
            {% for page in post.children('page') %}
            <div class="u-hidden">
              {{page.content}}
            </div>
            {% endfor %}
          </div>
        </div>
      </article>

    </div>
  </div>


  {% endblock %}
{% endembed %}
{% endblock %}

{% block content_right %}
<article>
  <div class="HorizontalTable">

    {% if post.get_field('extra_image') %}
    <div class="HorizontalTable-cell HorizontalTable-cell--img">
      <div class="HorizontalTable-cell-container HorizontalTable-cell-container--img Autoheight">
        <div class="Image">
          <img src="{{TimberImage(post.get_field('extra_image')).src('large')}}" alt="">
        </div>
      </div>
    </div>
    {% endif %}

  </div> <!--- /.HorizontalTable -->

</article>
{% endblock %}
