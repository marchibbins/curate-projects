{% extends "base.twig" %}

{% block content %}
{% embed "layout.twig" %}

{% block main %}
  <div class="Content-fullScroll">
  	<div class="Content-fullScroll-inner">
      <div class="HorizontalTable">
        {% for post in posts %}
        <div class="HorizontalTable-cell HorizontalTable-cell--article">
          <div class="HorizontalTable-cell-container Autoheight">
            <div class="YScroll">
            	{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}

{% endembed %}
{% endblock %}
